{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "arrow-parens": "off"
  },
  "ignorePatterns": [
    "dist/",
    "build/",
    "vendor/",
    "resources/js/bootstrap.js",
    "webpack.mix.js",
    "public/css/app.css",
    "public/js/app.js",
    "resources/js/app.js",
    "resources/css/app.css",
    "tailwind.config.js",
    "**/normalize.css",
    "node_modules/**"
  ]
}
